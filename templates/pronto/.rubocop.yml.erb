AllCops:
  Includes:
    - 'Rakefile'
    - 'config.ru'
    - 'Gemfile'
  Excludes:
    - Guardfile
    - bin/**
    - db/**/**
    - spec/**/**/**/**
    - test/**/**/**/**
    - tmp/**/**/**/**

Documentation:
  Enabled: false

Metrics/LineLength:
  Max: 100
  Exclude:
    - 'Gemfile'

Metrics/MethodLength:
  CountComments: false
  Max: 15

Metrics/BlockLength:
  CountComments: false
  Max: 40
  Exclude:
    - 'Rakefile'
    - '**/*.rake'
    - 'spec/**/*.rb'

Style/FrozenStringLiteralComment:
  EnforcedStyle: when_needed
